#include <iostream>
using namespace std;

class Fecha{
    int agno;
    int mes;
    int dia;
    int hora;
    public:
    void setData(int anno,mese,day,ora){
        agno=anno;mes=mese;dia=day;hora=ora;
    }
    void verifecha(int mes,int dia,int hora){
        if (mes>12 || mes<1 || dia<=0 || dia >31 || hora <0 || hora >24){
            cout<<"La fecha no es valida";
        }
        if(dia==31){
            if (mes==4 || mes==6 || mes==9 || mes==11 || mes==2){
                cout<<"La fecha no es valida";
            }
        }
        if (dia==30 && mes==2){cout<<"La fecha no es valida";}
        if(dia==29 && (agno%4!=0 && agno%400!=0)){
            cout<<"La fecha no es valida";
        }
        
       
    }
    friend class Cita;
};
class Cita{
  string nombre1;
  string nombre2;
  string lugar;
  public:
  void setCita(string nome1,nome2,lugo){
      nombre1=nome1;nombre2=nome2;lugar=lugo;
  }
  friend class ClaseExterna;
};
class ClaseExterna{
    Cita temporal;
    Cita Listado[10];
    int contador=0;
    void crearCita(string nome1,string nome2,string lugo,int anno,int mese,int day,int ora){
        temporal.nombre1=nome1;
        temporal.nombre2=nome2;
        temporal.lugar=lugo;
        temporal.agno=anno;
        temporal.mes=mese;
        temporal.dia=day;
        temporal.hora=ora;
        if (contador>10){
            cout<<"Numero maximo de citas alcanzado";
        }
        Listado[contador]=temporal;
        contador=contador+1;
    }
    
};

int main()
{
    

    return 0;
}
